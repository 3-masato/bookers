<h2>Editting Book</h2>
<article class="post">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  <% end %>
  <%= form_with model: @book, class: "post-form" do |f| %>
    <fieldset>
      <label>Title</label>
      <%= f.text_field :title %>
    </fieldset>

    <fieldset>
      <label>Body</label>
      <%= f.text_area :body %>
    </fieldset>

    <div>
      <%= f.submit "Update Book" %>
    </div>
  <% end %>
</article>

<div class="actions">
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
